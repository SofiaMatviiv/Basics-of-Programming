#include <iostream>               
#include<cstring>
using namespace std;

int main()
{
    int* arr;
    int size;
    cout << "size = ";
    cin >> size;

    arr = new int[size];

    for (int i = 0; i < size; i++) {
        cout << "arr[" << i << "] = ";
        cin >> arr[i];
    }
    int p_i, p_j;
    cout << "i= ";
    cin >> p_i;
    cout << "j= ";
    cin >> p_j;
    for (p_i; p_i <= p_j; p_i++) {
        cout << arr[p_i];
    }


    delete[] arr;

    return 0;
}
